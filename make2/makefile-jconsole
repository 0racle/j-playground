vpath % ../../../../jsrc

ifndef jplatform
jplatform=linux
endif
ifndef j64
j64=j64
endif

ODIR=../../../../bin/$(jplatform)/$(j64)

.SUFFIXES: .o

OBJS=  \
 jconsole.o \
 jeload.o

%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)

$(ODIR)/$(TARGET) : $(OBJS) $(OBJSLN)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(OBJSLN)

all: $(ODIR)/$(TARGET)

clean:
	rm -f $(OBJS) $(OBJSLN) linenoise.o

.PHONY: all clean
