vpath % ../../../../jsrc

ifndef jplatform
jplatform=linux
endif
ifndef j64x
j64x=j64
endif

ODIR=../../../../bin/$(jplatform)/$(j64x)

.SUFFIXES: .o

OBJS=  \
 andjnative.o \
 jeload.o

%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)

$(ODIR)/$(TARGET) : $(OBJS) 
	$(CC) $(LDFLAGS) -o $@ $(OBJS) 

all: $(ODIR)/$(TARGET)

clean:
	rm -f $(OBJS)

.PHONY: all clean
